<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ledger Account</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .container {
        width: 90%;
        margin: auto;
        padding: 20px;
        box-sizing: border-box;
      }

      .header {
        text-align: center;
        margin-bottom: 20px;
      }

      .company-client-info {
        display: inline-block;
      }

      .company-info {
        display: inline-block;
        border-bottom: 2px solid #0000009a;
        text-align: center;
      }

      .company-info,
      .client-info {
        margin-bottom: 20px;
      }

      .company-info h1,
      .client-info h2 {
        margin: 0;
        font-size: 1.2em;
        text-align: center;
      }

      .company-info p,
      .client-info p {
        margin: 0;
        font-size: 0.9em;
        text-align: center;
      }

      .date-range {
        text-align: center;
        margin-bottom: 10px;
        font-weight: bold;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9em;
        table-layout: fixed;
      }

      thead th {
        border-bottom: 2px solid #000;
        padding: 8px;
        text-align: left;
      }

      tbody td {
        padding: 8px;
        word-wrap: break-word;
        white-space: normal;
      }

      tbody tr:last-child td {
        border-bottom: none;
      }

      .closing-balance {
        text-align: right;
        font-weight: bold;
      }

      td[colspan="4"] {
        text-align: right;
        padding-right: 20px;
      }

      td[colspan="4"]:last-child {
        text-align: left;
      }

      tfoot td {
        font-weight: bold;
      }
      .underline {
        border-top: 1px solid #000;
      }

      .year-section {
        page-break-before: always;
        padding-top: 20px;
      }

      .year-section:first-child {
        page-break-before: auto;
      }

      @media print {
        body {
          margin: 0;
          padding: 0;
        }

        .container {
          padding: 20px 0;
          box-sizing: border-box;
          margin: 0 auto;
          page-break-inside: avoid;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
        <div class="header">
            <h1>Account Ledger</h1>
        </div>
        <% for (let year in data.years) { %>
        <div class="year-section">
            <div class="company-info">
                <h1><%= data.form.companyname %></h1>
                <p>
                    <% if (data.form.address1) { %><%= data.form.address1 %>,<br /><% } %>
                    <% if (data.form.address2) { %><%= data.form.address2 %>,<br /><% } %>
                    <% if (data.form.city) { %><%= data.form.city %>,<br /><% } %>
                    <% if (data.form.state) { %><%= data.form.state %>,<br /><% } %>
                    <% if (data.form.pincode) { %>Pincode: <%= data.form.pincode %><% } %>
                </p>
            </div>
            <div class="date-range">
                <p><%= data.years[year].dateRange %></p>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Particulars</th>
                        <th>Vch Type</th>
                        <th>Vch No.</th>
                        <th>Debit</th>
                        <th>Credit</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let date in data.years[year].records) { %>
                    <% data.years[year].records[date].forEach((record, index) => { %>
                    <tr>
                        <td><%= index === 0 ? date : "" %></td>
                        <td><%= record.particulars %></td>
                        <td><%= record.vchType %></td>
                        <td><%= record.vchNo %></td>
                        <td><%= record.debitAmount ? formatNumber(record.debitAmount) : '' %></td>
                        <td><%= record.creditAmount ? formatNumber(record.creditAmount) : '' %></td>
                    </tr>
                    <% }) %>
                    <% } %>
                    <!-- Add rows for totals and closing balance -->
                </tbody>
            </table>
        </div>
        <% } %>
    </div>
</body>
</html>
